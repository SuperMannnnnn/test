<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dabao.listEms"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dabao.listEms.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.dabao.listEms.ListEmpActivity"
            android:label="@string/title_activity_list_emp" >
        </activity>
        <activity
            android:name="com.dabao.listEms.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.dabao.listEms.RegistActivity"
            	android:label="@string/action_sign_in_register"
            ></activity>
    </application>

</manifest>
